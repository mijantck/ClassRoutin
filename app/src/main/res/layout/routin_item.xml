<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/RoutinCardeView"
    android:background="@drawable/rounded_border"
    app:cardBackgroundColor="#FDFDFC">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"

        >
        <View
            android:id="@+id/border"
            android:background="@color/colorPrimaryDark"
            android:layout_width="5dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:id="@+id/serial_Numbar_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Serial" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                >

                <TextView
                    android:fontFamily="@font/caudex"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:id="@+id/Subject_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="#036107"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:text=" Subject"
                    android:textSize="16dp" />

                <TextView
                    android:fontFamily="@font/caudex"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:id="@+id/Roome_Number_Id"
                    android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text=" Roome Number" />

                <TextView
                    android:fontFamily="@font/caudex"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:id="@+id/Techer_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher " />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="7"
            >




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/caudex"
                android:textSize="16sp"
                android:textColor="#000"
                android:id="@+id/Day_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Day Name " />

            <TextView
                android:fontFamily="@font/caudex"
                android:textSize="14sp"
                android:textColor="#036107"
                android:textStyle="bold"
                android:id="@+id/start_Time_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:text="Start TIme " />

            <TextView
                android:fontFamily="@font/caudex"
                android:textSize="14sp"
                android:textColor="#000"
                android:id="@+id/End_Time_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="End Time " />


        </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
               >
                <ImageView
                    android:visibility="visible"
                    android:id="@+id/alarmAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_alarm_add_black_24dp"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/alarmOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_alarm_off_black_24dp"/>



            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>