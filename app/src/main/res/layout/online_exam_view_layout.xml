<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:id="@+id/coursCardView"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#FCFCFA">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:weightSum="12"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="11dp"
                android:id="@+id/examViewTitle"
                android:text="Tile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textSize="11dp"
                android:gravity="center"
                android:id="@+id/examViewCatagory"
                android:text="catag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textSize="11dp"
                android:gravity="center"
                android:id="@+id/examViewDuration"
                android:text="Dura"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textSize="11dp"
                android:gravity="center"
                android:id="@+id/examViewMark"
                android:text="Mark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:textSize="11dp"
                android:id="@+id/examViewDate"
                android:text="Date "
                android:layout_width="match_parent"
                android:layout_height="25dp"/>
            <TextView
                android:gravity="center"
                android:textSize="11dp"
                android:id="@+id/examViewStartTime"
                android:text="S.Time "
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/startExam"
                android:gravity="center"
                android:textSize="11dp"
                android:text="Start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>