<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assiningment"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar_ID_assimget"
        layout="@layout/toolbar" />
    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_border"
        app:cardBackgroundColor="#FDFDFC">
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="10sp"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="60dp">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/caudex"
                    android:id="@+id/Make_Assignments_texview_button"
                    android:layout_marginLeft="3dp"
                    android:gravity="fill_vertical"
                    android:text="Make Assignments for student "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/asingmentViewRecyclerView"
        android:layout_marginTop="10sp"
        tools:listitem="@layout/theory_exam_quastion_view_single_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>