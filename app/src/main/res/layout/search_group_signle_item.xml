<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="5dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:textColor="#036107"
                                android:maxLines="1"
                                android:text="Sub Code  :"
                                android:textSize="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Sub Name :"
                                android:textColor="#000"
                                android:textSize="10dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="#000"
                                android:text="Section       :"
                                android:textSize="10dp"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Teacher       :"
                                android:textColor="#000"
                                android:textSize="10dp" />


                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/course_view_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#036107"
                                android:maxLines="1"
                                android:textSize="10dp"
                                android:text="Course"
                                />

                            <TextView
                                android:id="@+id/course_Name_view_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:textColor="#000"
                                android:maxLines="1"
                                android:text="Name"
                                android:textSize="10dp"
                                />
                            <TextView
                                android:id="@+id/sectionIdS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="#000"
                                android:text="Section"
                                android:textSize="10dp"/>
                            <TextView
                                android:id="@+id/Teacher_Name_ID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="#000"
                                android:text="Teacher"
                                android:textSize="10dp"/>




                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>



            </LinearLayout>

            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:visibility="visible"
                    android:id="@+id/groupAddButton"
                    android:layout_width="wrap_content"
                    android:textSize="10dp"
                    android:layout_height="20dp"
                    android:text="Follow"
                    android:background="#037E34"
                    android:textColor="#ffff"
                    />
                <Button
                    android:visibility="gone"
                    android:id="@+id/groupCancleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="10dp"
                    android:background="#F80505"
                    android:text=" cancel "
                    android:textColor="#ffff"
                    />

                <Button
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/groupAddButton"
                    android:visibility="gone"
                    android:id="@+id/deleteCousre"
                    android:layout_width="wrap_content"
                    android:textSize="10dp"
                    android:layout_height="20dp"
                    android:text="DELETE"
                    android:background="#F80505"
                    android:textColor="#ffff"
                    />

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>