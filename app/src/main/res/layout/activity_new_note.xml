<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".NewNoteActivity">


     <RelativeLayout

         android:layout_width="match_parent"
         android:layout_height="50dp"
       android:background="@color/colorPrimaryDark"
         android:orientation="horizontal">

         <TextView
             android:textStyle="bold"
             android:gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_alignParentBottom="true"
             android:text="Save Note "
             android:textSize="20dp"
             android:textColor="#F7F3F3"
             android:layout_marginLeft="10dp"

             />

         <ImageView
             android:layout_alignParentEnd="true"
             android:layout_marginLeft="170dp"
             android:id="@+id/save_note1"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:scaleType="fitEnd"
             android:layout_marginTop="5dp"
             android:layout_marginRight="15dp"
             android:src="@drawable/ic_save" />
     </RelativeLayout>

    <EditText
        android:drawableLeft="@drawable/ic_title_black"
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:inputType="text"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:drawableLeft="@drawable/ic_dehaze"
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Priority:"
        android:layout_marginLeft="10dp"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <NumberPicker
            android:id="@+id/number_picker_priority"
            android:layout_width="50dp"
            android:layout_height="70dp" />

        <TextView
            android:gravity="center"
            android:drawableLeft="@drawable/ic_today"
            android:id="@+id/select_last_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Last Date"
            android:layout_alignParentRight="true"
            android:textSize="11dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:padding="5dp"
            />

    </RelativeLayout>


</LinearLayout>